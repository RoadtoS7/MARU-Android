<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_book"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/img_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_book"
        app:layout_constraintBottom_toBottomOf="@id/img_book">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="16dp"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="horizontal"/>


        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록의 쓸모"
            app:layout_constraintStart_toEndOf="@id/gl_left"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박세란"
            app:layout_constraintStart_toEndOf="@id/tv_book_title"
            app:layout_constraintTop_toTopOf="@id/tv_book_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_book_title"
            android:layout_marginLeft="3dp"
            android:textColor="@color/warmGrey"
            />

        <TextView
            android:id="@+id/tv_remaining_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@id/tv_remaining"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            android:textColor="@color/cornflowerBlue"
            />

        <TextView
            android:id="@+id/tv_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일 남음"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:layout_constraintTop_toBottomOf="@id/gl_top"
            android:textColor="@color/warmGrey"
            />

        <ImageView
            android:id="@+id/img_mark_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기록이 기록을 넘어설 수 있을까. \n 기록이 생각의 도구가 될 수 있을까."
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toEndOf="@id/gl_right"
            app:layout_constraintTop_toBottomOf="@id/img_mark_left"
            app:layout_constraintBottom_toTopOf="@id/img_mark_right"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img_mark_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:layout_constraintEnd_toEndOf="@id/gl_right"
            app:layout_constraintBottom_toTopOf="@id/tv_host_name"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일 남음"
            app:layout_constraintEnd_toStartOf="@id/gl_right"
            app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
            android:textColor="@color/cornflowerBlue"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>